<%- include('../partials/header', { title: title }) %>
<%- include('../partials/navbar') %>

<div class="container mt-4">
    <h1 class="mb-4"><%= typeof cat !== 'undefined' && cat.id ? 'Editar Gatito' : 'Nuevo Gatito' %></h1>

    <form action="<%= typeof cat !== 'undefined' && cat.id ? '/gatitos/' + cat.id + '/editar?_method=PUT' : '/gatitos' %>" method="POST">
        <div class="mb-3">
            <label for="name" class="form-label">Nombre del Gatito:</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= typeof cat !== 'undefined' && cat.name ? cat.name : '' %>" required>
        </div>

        <div class="mb-3">
            <label for="birth_date" class="form-label">Fecha de Nacimiento:</label>
            <input type="date" class="form-control" id="birth_date" name="birth_date" value="<%= typeof cat !== 'undefined' && cat.birth_date ? cat.birth_date.toISOString().substring(0, 10) : '' %>" required>
        </div>

        <div class="mb-3">
            <label for="clan_id" class="form-label">Clan:</label>
            <select class="form-select" id="clan_id" name="clan_id" required>
                <option value="">Selecciona un Clan</option>
                <% if (clans && clans.length > 0) { %>
                    <% clans.forEach(clan => { %>
                        <option value="<%= clan.id %>" <%= typeof cat !== 'undefined' && cat.clan_id === clan.id ? 'selected' : '' %>>
                            <%= clan.name %>
                        </option>
                    <% }); %>
                <% } %>
            </select>
        </div>

        <div class="mb-3">
            <label for="territory_id" class="form-label">Territorio:</label>
            <select class="form-select" id="territory_id" name="territory_id" required>
                <option value="">Selecciona un Territorio</option>
                <% if (territories && territories.length > 0) { %>
                    <% territories.forEach(territory => { %>
                        <option value="<%= territory.id %>" <%= typeof cat !== 'undefined' && cat.territory_id === territory.id ? 'selected' : '' %>>
                            <%= territory.name %>
                        </option>
                    <% }); %>
                <% } %>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">
            <%= typeof cat !== 'undefined' && cat.id ? 'Actualizar Gatito' : 'Crear Gatito' %>
        </button>
        <a href="/gatitos" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>

<%- include('../partials/footer') %>