<%- include('../partials/header', { title: title }) %>
<%- include('../partials/navbar') %>

<div class="container mt-4">
    <h1 class="mb-4"><%= clan.id ? 'Editar Clan' : 'Nuevo Clan' %></h1>

    <form action="/clanes<%= clan.id ? '/' + clan.id + '/editar?_method=PUT' : '' %>" method="POST">
        <div class="mb-3">
            <label for="name" class="form-label">Nombre del Clan</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= clan.name || '' %>" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Descripci√≥n (opcional)</label>
            <textarea class="form-control" id="description" name="description" rows="3"><%= clan.description || '' %></textarea>
        </div>
        
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i> <%= clan.id ? 'Actualizar Clan' : 'Guardar Clan' %>
            </button>
            <a href="/clanes" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i> Volver a la Lista
            </a>
        </div>
    </form>
</div>

<%- include('../partials/footer') %>